		try {
			
			
			pursuer.armDisarm(true);
			pursuer.takeoff(20);
			
			pursuer.rotateToYaw(90f);
			System.out.println(pursuer.getOrientation());
			pursuer.moveByVelocityZ(new Vector3r(10, 0, 0), new Vector3r(0, 0, -7), 20);
			
		} catch (Exception e) {
			System.out.println(e.getStackTrace());
		}
		

    }
}
